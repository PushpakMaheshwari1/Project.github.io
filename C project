#include<stdio.h>
#include<stdlib.h>

int front = -1;
int rear = -1;

int q[20];
void Add_Person(int);
void Delete_Person();
void Display();

void main()
{
    int choice,item,
    clrscr();
    printf("\t\t\tQueue\t\t\t");

    while(1)
    {
        printf("\n1.Add_Person\n2.Delete_Person\n3.Display\n4.Exit");
        printf("\nEnter your Choice:\n");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1: 
                    printf("\n Enter Person:");
                    scanf("%d",&item);
                    Add_Person(item);
                    break;
                    
            case 2:
                    Delete_Person();
                    break;
                    
            case 3:
                    Display();
                    break;
                    
            case 4:
                    exit(0);

            default:
                    printf("\nEnter Valid choice...\n");
        }
    }
}

void Add_Person(int item)
{
    if(front>=20)
    {
        printf("\nQueue is Overflow...\n");
        return;
    }
    else
    {
        rear ++;
        q[rear] = item;
    }
    
    if(front == -1)
    {
        front = 0;
    }
}

void Delete_Person()
{
    int item;
    if(front == -1)
    {
        printf("\nQueue is underflow\n");
        return;
    }
    
    item = q[front];
    
    if(front == rear)
    {
        front = -1;
        rear = -1;
    }
    
    else
    {
        front ++;
        printf("\nDeleted item:\n %d",item);
    }
}

void Display()
{
    int i;
    
    if (front==-1)
    {
        printf("\nQueue is Empty..\n");
        return;
    }
    
    printf(" \n QUEUE : \n" );
    
    for(i=front; i<= rear;i++)
        
        printf("\t %d",q[i]);
    
}
